<Window x:Class="Blockcode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blockcode"
        mc:Ignorable="d"
        Title="Block Code" Height="600" Width="1000">
    <Grid>
        <DockPanel>
            <local:BlocksSection x:Name="BlocksSection" />
            <local:ScriptSection x:Name="ScriptSection" />
            <local:OutputSection x:Name="OutputSection" />
        </DockPanel>
    </Grid>
</Window>