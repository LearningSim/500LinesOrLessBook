<UserControl x:Class="Blockcode.OutputTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <DockPanel Margin="10, 0">
        <TextBlock DockPanel.Dock="Top" Text="Output" FontSize="14" Foreground="CornflowerBlue" FontWeight="DemiBold" Margin="0, 10" />
        <Canvas DockPanel.Dock="Top" Background="LightGray" x:Name="Canvas" />
    </DockPanel>
</UserControl>